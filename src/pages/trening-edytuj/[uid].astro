---
import Layout from '../../layouts/Layout.astro';
import TreningEdytuj from '../../components/content/TreningEdytuj.astro';
import type { Training } from '../../data/trainings';
import { trainings } from '../../data/trainings';
import { t } from '../../utils/i18n';

interface Props {
  training: Training;
}

export async function getStaticPaths() {
  return trainings.map(training => ({
    params: { uid: training.uid },
    props: { training },
  }));
}

const { training } = Astro.props;
const trainingType = training.type === 'bieg' ? t("edit_training.type_run") : training.type === 'nordic walking' ? t("edit_training.type_nordic") : t("edit_training.type_swimming");
---

<Layout t={t} title={`${t("edit_training.meta_title")}: ${trainingType}`}>
  <TreningEdytuj t={t} training={training} />
</Layout>
