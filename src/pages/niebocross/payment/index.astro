---
// Static payment page that handles payment IDs dynamically
---

<html lang="pl">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Płatność - NieboCross 2026</title>
    <style>
      body {
        font-family: system-ui, -apple-system, sans-serif;
        margin: 0;
        padding: 0;
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      }
      .container {
        background: white;
        padding: 2rem;
        border-radius: 12px;
        box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1);
        text-align: center;
        max-width: 400px;
        width: 90%;
      }
      .spinner {
        border: 4px solid #f3f3f3;
        border-top: 4px solid #667eea;
        border-radius: 50%;
        width: 40px;
        height: 40px;
        animation: spin 1s linear infinite;
        margin: 20px auto;
      }
      @keyframes spin {
        0% { transform: rotate(0deg); }
        100% { transform: rotate(360deg); }
      }
      .error {
        color: #dc2626;
        background: #fef2f2;
        padding: 1rem;
        border-radius: 8px;
        margin-top: 1rem;
      }
      .error a {
        color: #991b1b;
        text-decoration: underline;
        font-weight: 500;
      }
      .error a:hover {
        color: #7f1d1d;
      }
      .info {
        color: #059669;
        background: #ecfdf5;
        padding: 1rem;
        border-radius: 8px;
        margin-top: 1rem;
      }
      .btn {
        display: inline-block;
        margin-top: 1rem;
        padding: 0.75rem 1.5rem;
        background: #667eea;
        color: white;
        text-decoration: none;
        border-radius: 8px;
        font-weight: 500;
      }
      .btn:hover {
        background: #5a67d8;
      }
    </style>
  </head>
  <body>
    <div class="container">
      <h1 id="title">Przetwarzanie płatności...</h1>
      <div id="spinner" class="spinner"></div>
      <p id="message">Proszę czekać, trwa przekierowanie do bramki płatniczej.</p>
      <div id="info-message" class="info" style="display: none;"></div>
      <div id="error-message" class="error" style="display: none;"></div>
      <a id="panel-link" href="/niebocross/panel" class="btn" style="display: none;">Przejdź do panelu</a>
    </div>

    <script>
      // Handle legacy URLs with ID in path - redirect to query parameter format
      function handleLegacyUrl() {
        const pathParts = window.location.pathname.split('/');
        const paymentIndex = pathParts.indexOf('payment');

        if (paymentIndex !== -1 && paymentIndex < pathParts.length - 1) {
          const potentialId = pathParts[paymentIndex + 1];
          // Check if it looks like a UUID
          if (potentialId && potentialId !== 'index' && /^[0-9a-f]{8}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{12}$/i.test(potentialId)) {
            const newUrl = `/niebocross/payment/?id=${potentialId}`;
            window.location.href = newUrl;
            return true; // Indicate that we're redirecting
          }
        }
        return false; // No redirect needed
      }

      async function handlePayment() {
        // First check if we need to redirect from legacy URL format
        if (handleLegacyUrl()) {
          return; // Exit early, redirect is happening
        }

        const urlParams = new URLSearchParams(window.location.search);
        let paymentId = urlParams.get('id');

        // If no ID in query params, check if it's in the URL path (legacy format)
        if (!paymentId) {
          const pathParts = window.location.pathname.split('/');
          // Look for UUID in the path (should be the last segment if present)
          const lastPart = pathParts[pathParts.length - 1];
          if (lastPart && lastPart !== 'payment' && lastPart !== '') {
            paymentId = lastPart;
          }
        }

        if (!paymentId) {
          // If no payment ID is provided, redirect to panel
          window.location.href = '/niebocross/panel';
          return;
        }

        try {
          // Fetch payment details (this will also create SIBS link if needed)
          const response = await fetch(`/api/niebocross/payment/${paymentId}`);
          const data = await response.json();

          if (!response.ok) {
            throw new Error(data.error || 'Failed to load payment details');
          }

          // No pending payments
          if (!data.has_pending_payment) {
            document.getElementById('title').textContent = 'Brak nieopłaconych płatności';
            document.getElementById('message').textContent = data.message || 'Wszystkie płatności zostały już zrealizowane.';
            document.getElementById('spinner').style.display = 'none';
            document.getElementById('info-message').textContent = 'Możesz przejść do panelu, aby zobaczyć szczegóły rejestracji.';
            document.getElementById('info-message').style.display = 'block';
            document.getElementById('panel-link').style.display = 'inline-block';
            return;
          }

          // Has pending payment with link - redirect
          if (data.payment && data.payment.payment_link) {
            window.location.href = data.payment.payment_link;
          } else {
            throw new Error('Payment link not available');
          }
        } catch (error) {
          console.error('Payment error:', error);
          document.getElementById('title').textContent = 'Błąd płatności';
          document.getElementById('message').style.display = 'none';
          document.getElementById('error-message').innerHTML =
            'Wystąpił błąd podczas tworzenia płatności. Spróbuj ponownie lub skontaktuj się z organizatorem: <a href="mailto:biuro@zatyrani.pl">biuro@zatyrani.pl</a>';
          document.getElementById('error-message').style.display = 'block';
          document.getElementById('spinner').style.display = 'none';
          document.getElementById('panel-link').style.display = 'inline-block';
        }
      }

      // Handle payment on page load
      handlePayment();
    </script>
  </body>
</html>
