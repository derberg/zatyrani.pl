---
// Static payment page that handles payment IDs dynamically
---

<html lang="pl">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Płatność - NieboCross 2026</title>
    <style>
      body {
        font-family: system-ui, -apple-system, sans-serif;
        margin: 0;
        padding: 0;
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      }
      .container {
        background: white;
        padding: 2rem;
        border-radius: 12px;
        box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1);
        text-align: center;
        max-width: 400px;
        width: 90%;
      }
      .spinner {
        border: 4px solid #f3f3f3;
        border-top: 4px solid #667eea;
        border-radius: 50%;
        width: 40px;
        height: 40px;
        animation: spin 1s linear infinite;
        margin: 20px auto;
      }
      @keyframes spin {
        0% { transform: rotate(0deg); }
        100% { transform: rotate(360deg); }
      }
      .error {
        color: #dc2626;
        background: #fef2f2;
        padding: 1rem;
        border-radius: 8px;
        margin-top: 1rem;
      }
    </style>
  </head>
  <body>
    <div class="container">
      <h1>Przetwarzanie płatności...</h1>
      <div class="spinner"></div>
      <p>Proszę czekać, trwa przekierowanie do bramki płatniczej.</p>
      <div id="error-message" class="error" style="display: none;"></div>
    </div>

    <script>
      // Handle legacy URLs with ID in path - redirect to query parameter format
      function handleLegacyUrl() {
        const pathParts = window.location.pathname.split('/');
        const paymentIndex = pathParts.indexOf('payment');

        if (paymentIndex !== -1 && paymentIndex < pathParts.length - 1) {
          const potentialId = pathParts[paymentIndex + 1];
          // Check if it looks like a UUID
          if (potentialId && potentialId !== 'index' && /^[0-9a-f]{8}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{12}$/i.test(potentialId)) {
            const newUrl = `/niebocross/payment/?id=${potentialId}`;
            window.location.href = newUrl;
            return true; // Indicate that we're redirecting
          }
        }
        return false; // No redirect needed
      }

      async function handlePayment() {
        // First check if we need to redirect from legacy URL format
        if (handleLegacyUrl()) {
          return; // Exit early, redirect is happening
        }

        const urlParams = new URLSearchParams(window.location.search);
        let paymentId = urlParams.get('id');

        // If no ID in query params, check if it's in the URL path (legacy format)
        if (!paymentId) {
          const pathParts = window.location.pathname.split('/');
          // Look for UUID in the path (should be the last segment if present)
          const lastPart = pathParts[pathParts.length - 1];
          if (lastPart && lastPart !== 'payment' && lastPart !== '') {
            paymentId = lastPart;
          }
        }

        if (!paymentId) {
          // If no payment ID is provided, redirect to panel
          window.location.href = '/niebocross/panel';
          return;
        }

        try {
          // Fetch payment details
          const response = await fetch(`/api/niebocross/payment/${paymentId}`);
          const data = await response.json();

          if (!response.ok) {
            throw new Error(data.error || 'Failed to load payment details');
          }

          if (data.payment.payment_status === 'paid') {
            window.location.href = '/niebocross/panel?payment=already_paid';
            return;
          }

          if (data.payment.payment_link) {
            window.location.href = data.payment.payment_link;
          } else {
            throw new Error('Payment link not available');
          }
        } catch (error) {
          console.error('Payment error:', error);
          document.getElementById('error-message').textContent =
            'Wystąpił błąd podczas ładowania płatności. Spróbuj ponownie lub skontaktuj się z organizatorem.';
          document.getElementById('error-message').style.display = 'block';
          document.querySelector('.spinner').style.display = 'none';
        }
      }

      // Handle payment on page load
      handlePayment();
    </script>
  </body>
</html>
