---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Zaloguj się - Zatyrani">
  <div class="flex items-center justify-center min-h-[calc(100vh-200px)]">
    <div class="w-full max-w-md">
      <form class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4">
        <div class="flex justify-center mb-6">
          <img src="/zatyrani_logo.webp" alt="Zatyrani Logo" class="h-24 w-auto" />
        </div>

        <div id="phoneInputSection">
          <div class="mb-4">
            <label class="block text-gray-700 text-sm font-bold mb-2" for="phoneLocal">
              Numer telefonu
            </label>
            <div class="flex">
              <span class="inline-flex items-center px-3 rounded-l-md border border-r-0 border-gray-300 bg-gray-50 text-gray-500 text-sm">
                +48
              </span>
              <input
                class="shadow appearance-none border rounded-r-md w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
                id="phoneLocal"
                type="tel"
                inputmode="numeric"
                autocomplete="off"
                placeholder="123 456 789"
              />
            </div>
            <p class="mt-1 text-xs text-gray-500">
              Podaj 9 cyfr numeru telefonu bez prefiksu kraju. Możesz używać spacji, ale tylko cyfry zostaną zapisane.
            </p>
          </div>
          <div class="flex items-center justify-center space-x-4">
            <button
              id="sendCodeButton"
              class="bg-purple-600 hover:bg-purple-700 text-white font-bold py-2 px-4 rounded-md focus:outline-none focus:shadow-outline"
              type="button"
            >
              Wyślij kod do logowania
            </button>
            <a href="/" class="bg-purple-600 hover:bg-purple-700 text-white font-bold py-2 px-4 rounded-md focus:outline-none focus:shadow-outline inline-block text-center">
              Wróć
            </a>
          </div>
        </div>

        <div id="codeInputSection" class="hidden">
          <div class="mb-4">
            <label class="block text-gray-700 text-sm font-bold mb-2" for="code">
              Kod do logowania
            </label>
            <input
              class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
              id="code"
              type="tel"
              inputmode="numeric"
              autocomplete="off"
              placeholder="Wprowadź 6-cyfrowy kod"
              maxlength="6"
            />
            <p class="mt-1 text-xs text-gray-500">
              Kod jest ważny przez 10 minut. Masz maksymalnie 3 próby.
            </p>
          </div>
          <div class="mb-4 text-center">
            <button
              id="resendCodeButton"
              type="button"
              class="text-sm text-purple-600 hover:text-purple-700 disabled:text-gray-400 disabled:cursor-not-allowed"
              disabled
            >
              Wyślij kod ponownie (15s)
            </button>
          </div>
          <div class="flex items-center justify-center space-x-4">
            <button
              id="confirmButton"
              class="bg-purple-600 hover:bg-purple-700 text-white font-bold py-2 px-4 rounded-md focus:outline-none focus:shadow-outline"
              type="button"
            >
              Potwierdź
            </button>
            <button
              id="backButton"
              class="bg-purple-600 hover:bg-purple-700 text-white font-bold py-2 px-4 rounded-md focus:outline-none focus:shadow-outline"
              type="button"
            >
              Wróć
            </button>
          </div>
        </div>
        <div id="loginMessage" class="mt-4 text-center text-sm"></div>
      </form>
    </div>
  </div>

  <!-- Success Modal -->
  <div id="successModal" class="fixed inset-0 bg-gray-600 bg-opacity-50 overflow-y-auto h-full w-full hidden">
    <div class="relative top-20 mx-auto p-5 border w-96 shadow-lg rounded-md bg-white">
      <div class="mt-3 text-center">
        <div class="mx-auto flex items-center justify-center h-12 w-12 rounded-full bg-green-100">
          <svg class="h-6 w-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path></svg>
        </div>
        <h3 class="text-lg leading-6 font-medium text-gray-900 mt-2">Zalogowano pomyślnie!</h3>
        <div class="mt-2 px-7 py-3">
        </div>
        <div class="items-center px-4 py-3">
          <button
            id="okButton"
            class="px-4 py-2 bg-purple-600 text-white text-base font-medium rounded-md w-full shadow-sm hover:bg-purple-700 focus:outline-none focus:ring-2 focus:ring-purple-500"
          >
            OK
          </button>
        </div>
      </div>
    </div>
  </div>
</Layout>

<script is:inline>
  const phoneInputSection = document.getElementById('phoneInputSection');
  const codeInputSection = document.getElementById('codeInputSection');
  const sendCodeButton = document.getElementById('sendCodeButton');
  const confirmButton = document.getElementById('confirmButton');
  const successModal = document.getElementById('successModal');
  const okButton = document.getElementById('okButton');
  const backButton = document.getElementById('backButton');
  const newBackButton = document.querySelector('#phoneInputSection a');
  const phoneLocalInput = document.getElementById('phoneLocal');
  const codeInput = document.getElementById('code');
  const resendCodeButton = document.getElementById('resendCodeButton');
  const loginMessage = document.getElementById('loginMessage');

  let currentPhoneE164 = null;
  let resendCountdown = 15;
  let resendInterval = null;
  let redirectTarget = '/';

  function setMessage(text, type = 'info') {
    if (!loginMessage) return;
    loginMessage.textContent = text || '';
    loginMessage.className =
      'mt-4 text-center text-sm ' +
      (type === 'error'
        ? 'text-red-700'
        : type === 'success'
        ? 'text-green-700'
        : 'text-gray-700');
  }

  function startResendCountdown() {
    if (!resendCodeButton) return;
    resendCountdown = 15;
    resendCodeButton.disabled = true;
    resendCodeButton.textContent = `Wyślij kod ponownie (${resendCountdown}s)`;
    if (resendInterval) clearInterval(resendInterval);
    resendInterval = setInterval(() => {
      resendCountdown -= 1;
      if (resendCountdown <= 0) {
        clearInterval(resendInterval);
        resendInterval = null;
        resendCodeButton.disabled = false;
        resendCodeButton.textContent = 'Wyślij kod ponownie';
      } else {
        resendCodeButton.textContent = `Wyślij kod ponownie (${resendCountdown}s)`;
      }
    }, 1000);
  }

  if (phoneLocalInput) {
    phoneLocalInput.addEventListener('input', () => {
      const digits = phoneLocalInput.value.replace(/\D/g, '').slice(0, 9);
      phoneLocalInput.value = digits
        .replace(/(\d{3})(\d{3})(\d{0,3})/, (_, a, b, c) => (c ? `${a} ${b} ${c}` : `${a} ${b}`))
        .trim();
    });
  }

  if (codeInput) {
    codeInput.addEventListener('input', () => {
      const digits = codeInput.value.replace(/\D/g, '').slice(0, 6);
      codeInput.value = digits;
    });
  }

  try {
    const lastPath = window.localStorage.getItem('lastPath');
    if (lastPath && lastPath !== '/zaloguj') {
      redirectTarget = lastPath;
    } else {
      redirectTarget = '/wydarzenia';
    }
  } catch {
    redirectTarget = '/wydarzenia';
  }

  sendCodeButton.addEventListener('click', async () => {
    setMessage('');
    if (!phoneLocalInput) return;

    const rawDigits = phoneLocalInput.value.replace(/\D/g, '');
    if (rawDigits.length !== 9) {
      setMessage('Podaj poprawny numer telefonu (dokładnie 9 cyfr).', 'error');
      return;
    }

    currentPhoneE164 = `+48${rawDigits}`;

    sendCodeButton.textContent = 'Wysyłanie...';
    sendCodeButton.disabled = true;
    phoneLocalInput.disabled = true;

    try {
      const res = await fetch('/api/auth/request-code', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ phone: currentPhoneE164 }),
      });

      const data = await res.json().catch(() => ({}));

      if (!res.ok || !data.success) {
        const msg =
          data && data.error
            ? data.error
            : 'Nie udało się wysłać kodu. Spróbuj ponownie za chwilę.';
        setMessage(msg, 'error');
        return;
      }

      setMessage('Kod został wysłany SMS-em. Sprawdź telefon.', 'success');
      phoneInputSection.classList.add('hidden');
      codeInputSection.classList.remove('hidden');
      if (codeInput) codeInput.focus();
      startResendCountdown();
    } catch (error) {
      console.error(error);
      setMessage(
        'Coś nie tak z systemem. Spróbuj znowy za pare minut. Jak problem nadal się powtarza to napisz do Łysego',
        'error'
      );
    } finally {
      sendCodeButton.textContent = 'Wyślij kod do logowania';
      sendCodeButton.disabled = false;
      phoneLocalInput.disabled = false;
    }
  });

  if (resendCodeButton) {
    resendCodeButton.addEventListener('click', async () => {
      if (!currentPhoneE164) {
        setMessage('Najpierw podaj numer telefonu i poproś o kod.', 'error');
        return;
      }

      setMessage('');
      resendCodeButton.disabled = true;
      resendCodeButton.textContent = 'Wysyłanie...';

      try {
        const res = await fetch('/api/auth/request-code', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ phone: currentPhoneE164 }),
        });

        const data = await res.json().catch(() => ({}));

        if (!res.ok || !data.success) {
          const msg =
            data && data.error
              ? data.error
              : 'Nie udało się wysłać kodu ponownie. Spróbuj za chwilę.';
          setMessage(msg, 'error');
          return;
        }

        setMessage('Nowy kod został wysłany SMS-em.', 'success');
        startResendCountdown();

        // Unlock input and buttons after resend since attempts are reset
        codeInput.disabled = false;
        confirmButton.disabled = false;
        backButton.disabled = false;
      } catch (error) {
        console.error(error);
        setMessage(
          'Coś nie tak z systemem. Spróbuj znowy za pare minut. Jak problem nadal się powtarza to napisz do Łysego',
          'error'
        );
      }
    });
  }

  confirmButton.addEventListener('click', async () => {
    setMessage('');
    if (!currentPhoneE164) {
      setMessage('Najpierw poproś o kod do logowania.', 'error');
      return;
    }
    if (!codeInput) return;

    const digits = codeInput.value.replace(/\D/g, '');
    if (digits.length !== 6) {
      setMessage('Podaj poprawny kod (6 cyfr).', 'error');
      return;
    }

    confirmButton.textContent = 'Potwierdzanie...';
    confirmButton.disabled = true;
    codeInput.disabled = true;
    backButton.disabled = true;

    try {
      const res = await fetch('/api/auth/verify-code', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ phone: currentPhoneE164, code: digits }),
      });

      const data = await res.json().catch(() => ({}));

      if (!res.ok || !data.success) {
        const msg =
          data && data.error
            ? data.error
            : 'Nie udało się potwierdzić kodu. Spróbuj ponownie.';
        setMessage(msg, 'error');

        if (res.status === 403) {
          confirmButton.disabled = true;
          codeInput.disabled = true;
          backButton.disabled = true;
        } else {
          confirmButton.disabled = false;
          codeInput.disabled = false;
          backButton.disabled = false;
        }
        confirmButton.textContent = 'Potwierdź';
        return;
      }

      try {
        const expiresAt = Date.now() + 60 * 24 * 60 * 60 * 1000;
        window.localStorage.setItem(
          'authState',
          JSON.stringify({ loggedIn: true, expiresAt })
        );
      } catch (e) {
        console.warn('Cannot use localStorage for authState', e);
      }

      successModal.classList.remove('hidden');
      setMessage('Zalogowano pomyślnie.', 'success');
    } catch (error) {
      console.error(error);
      setMessage(
        'Coś nie tak z systemem. Spróbuj znowy za pare minut. Jak problem nadal się powtarza to napisz do Łysego',
        'error'
      );
      confirmButton.disabled = false;
      codeInput.disabled = false;
      backButton.disabled = false;
    } finally {
      confirmButton.textContent = 'Potwierdź';
    }
  });

  backButton.addEventListener('click', () => {
    codeInputSection.classList.add('hidden');
    phoneInputSection.classList.remove('hidden');
    setMessage('');
  });

  newBackButton.addEventListener('click', () => {
    window.location.href = '/'; // Redirect to home page
  });

  okButton.addEventListener('click', () => {
    successModal.classList.add('hidden'); // Hide modal
    window.location.href = redirectTarget;
  });
</script>
