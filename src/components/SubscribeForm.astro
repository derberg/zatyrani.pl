---
interface Props {
  t: (key: string) => string;
}

const { t } = Astro.props;
---

<section class="mt-24">
  <h2 class="text-2xl font-bold text-center mb-8">{t("subscribe.title")}</h2>
  <p class="text-center text-gray-600 mb-8">
    {t("subscribe.description")}
  </p>
  <p class="text-center text-gray-600 mb-8">
    {t("subscribe.email_prompt")}
    <a href="mailto:biuro@zatyrani.pl" class="text-purple-600 hover:text-purple-800">
      biuro@zatyrani.pl
    </a>
  </p>
</section>
