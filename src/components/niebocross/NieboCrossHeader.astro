---
interface Props {
  t: (key: string) => string;
}

const { t } = Astro.props;
---

<div class="bg-gradient-to-r from-sky-900 via-slate-800 to-emerald-900 py-8 px-6 text-white">
  <div class="mx-auto max-w-6xl">
    <div class="flex flex-col gap-4 sm:flex-row sm:items-center sm:justify-between">
      <div class="flex items-center gap-4">
        <img src="/niebocross_logo.webp" alt="NieboCross" class="h-16 w-16 rounded-lg bg-white/10 p-2" />
        <div>
          <h1 class="text-2xl font-bold">NieboCross</h1>
          <p class="text-sm text-emerald-100">{t("niebocross.charity_event")}</p>
        </div>
      </div>
      <a 
        href="/niebocross" 
        class="rounded-full bg-white/10 px-4 py-2 text-sm font-semibold transition hover:bg-white/20 ring-1 ring-white/20 text-center sm:text-left"
      >
        ‚Üê {t("niebocross.back_to_main")}
      </a>
    </div>
  </div>
</div>
