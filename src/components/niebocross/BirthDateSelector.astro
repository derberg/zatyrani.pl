---
interface Props {
  index?: number;
  id?: string;
  name?: string;
  t: (key: string) => string;
  value?: string;
  required?: boolean;
}

const { index, id, name, t, value, required = true } = Astro.props;

// Determine the field name/id based on what's provided
const fieldId = id || (index ? `birthDate_${index}` : 'birthDate');
const fieldName = name || (index ? `birthDate_${index}` : 'birthDate');
---

<div>
  <label for={fieldId} class="block text-sm font-semibold text-slate-700">
    {t("niebocross.form.birth_date")} {required && <span class="text-red-600">*</span>}
  </label>
  <input
    type="date"
    id={fieldId}
    name={fieldName}
    value={value || ""}
    required={required}
    class="mt-1 block w-full rounded-lg border-emerald-300 border-2 shadow-sm focus:border-emerald-500 focus:ring-emerald-500 px-3 py-2"
  />
</div>
