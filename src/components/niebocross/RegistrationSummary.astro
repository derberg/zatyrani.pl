---
interface Props {
  t: (key: string) => string;
}

const { t } = Astro.props;
---

<div class="rounded-xl border-2 border-emerald-200 bg-emerald-50 p-6">
  <h3 class="text-lg font-bold text-slate-900">{t("niebocross.summary.title")}</h3>
  <div class="mt-4 space-y-2 text-sm">
    <div class="flex justify-between">
      <span class="text-slate-700">{t("niebocross.summary.race_fees")}</span>
      <span class="font-semibold text-slate-900" id="raceFees">0 z≈Ç</span>
    </div>
    <div class="flex justify-between">
