---
interface Props {
  value?: string;
  name?: string;
  required?: boolean;
  t: (key: string) => string;
  disabledCategories?: string[];
}

const { value = "", name = "raceCategory", required = true, t, disabledCategories = [] } = Astro.props;
---

<select
  name={name}
  required={required}
  class="mt-1 block w-full rounded-lg border-slate-300 shadow-sm focus:border-emerald-500 focus:ring-emerald-500"
>
  <option value="">{t("niebocross.form.select_category")}</option>
  <option value="3km_run" selected={value === "3km_run"} disabled={disabledCategories.includes("3km_run")}>{t("niebocross.categories.3km_run")}</option>
  <option value="3km_nw" selected={value === "3km_nw"} disabled={disabledCategories.includes("3km_nw")}>{t("niebocross.categories.3km_nw")}</option>
  <option value="9km_run" selected={value === "9km_run"} disabled={disabledCategories.includes("9km_run")}>{t("niebocross.categories.9km_run")}</option>
  <option value="9km_nw" selected={value === "9km_nw"} disabled={disabledCategories.includes("9km_nw")}>{t("niebocross.categories.9km_nw")}</option>
  <option value="kids_run" selected={value === "kids_run"} disabled={disabledCategories.includes("kids_run")}>{t("niebocross.categories.kids_run")}</option>
</select>
<p class="mt-1 text-sm text-slate-600">{t("niebocross.form.kids_run_info")}</p>
