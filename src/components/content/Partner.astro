---
interface Props {
  t: (key: string) => string;
}

const { t } = Astro.props;
---

<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
  <div class="grid md:grid-cols-2 gap-12 items-center">
    <div class="space-y-8">
      <h1 class="text-5xl font-bold">{t("partner.title")}</h1>

      <div class="space-y-4">
        <p class="text-lg">
          {t("partner.paragraph1")}
        </p>
        <p class="text-lg">
          {t("partner.paragraph2")}
        </p>
      </div>

      <div class="flex gap-4">
        <a
          href="https://gratisownia.pl"
          target="_blank"
          rel="noopener noreferrer"
          class="inline-block px-6 py-3 text-white rounded-md hover:bg-orange-500 transition-colors"
          style="background-color: #f97316;"
        >
          {t("partner.visit_partner")}
        </a>
        <a
          href="https://www.youtube.com/@gratisownia"
          target="_blank"
          rel="noopener noreferrer"
          class="inline-block px-6 py-3 text-white rounded-md hover:bg-red-700 transition-colors"
          style="background-color: #dc2626;"
        >
          {t("partner.youtube")}
        </a>
      </div>
    </div>

    <div class="flex justify-center">
      <img src="/gratisownia.png" alt={t("partner.logo_alt")} class="w-full max-w-md" />
    </div>
  </div>
</div>
