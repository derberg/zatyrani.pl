---
import PhotoGallery from "../PhotoGallery.astro";

interface Props {
  t: (key: string) => string;
}

const { t } = Astro.props;

const eventDate = "12.04.2026";
const locationName = "Nieborowice";
---

<section class="relative isolate overflow-hidden bg-gradient-to-br from-sky-900 via-slate-900 to-emerald-900 text-white">
  <div class="absolute inset-0 opacity-60">
    <div class="absolute inset-0 bg-[radial-gradient(circle_at_20%_20%,rgba(94,234,212,0.15),transparent_40%)]"></div>
    <div class="absolute inset-0 bg-[radial-gradient(circle_at_80%_0%,rgba(56,189,248,0.18),transparent_40%)]"></div>
  </div>

  <div class="relative mx-auto max-w-6xl px-6 py-16 lg:grid lg:grid-cols-[1.1fr_0.9fr] lg:items-center lg:gap-12">
    <div class="space-y-6">
      <p class="inline-flex items-center gap-2 rounded-full bg-white/10 px-4 py-2 text-sm font-semibold uppercase tracking-widest text-emerald-100 ring-1 ring-white/20">
        {t("niebocross.charity_event")}
      </p>
      <h1 class="text-4xl font-black leading-tight sm:text-5xl">{t("niebocross.title")}</h1>
      <p class="text-xl text-emerald-100">
        {t("niebocross.memorial_dedication")} <a href="#memorial-marek" class="italic underline hover:text-white transition">{t("niebocross.memorial_person_name")}</a>
      </p>
      <p class="text-lg text-slate-100 sm:text-xl">
        {t("niebocross.hero_description")}
      </p>

      <div class="grid gap-4 sm:grid-cols-3">
        <div class="rounded-2xl bg-white/10 px-4 py-3 ring-1 ring-white/15">
          <p class="text-sm text-emerald-100">{t("niebocross.date")}</p>
          <p class="text-xl font-semibold">{eventDate}</p>
        </div>
        <div class="rounded-2xl bg-white/10 px-4 py-3 ring-1 ring-white/15">
          <p class="text-sm text-emerald-100">{t("niebocross.place")}</p>
          <p class="text-xl font-semibold">{locationName}</p>
        </div>
        <div class="rounded-2xl bg-white/10 px-4 py-3 ring-1 ring-white/15">
          <p class="text-sm text-emerald-100">{t("niebocross.routes")}</p>
          <p class="text-xl font-semibold">3+ km · 9+ km</p>
        </div>
      </div>

      <div class="flex flex-wrap gap-3">
        <div id="registration-buttons" class="contents">
          <a
            href="/niebocross/rejestracja"
            class="inline-flex items-center justify-center rounded-full bg-emerald-500 px-6 py-3 text-base font-semibold text-slate-900 shadow-lg shadow-emerald-500/30 transition hover:-translate-y-0.5 hover:bg-emerald-400"
          >
            {t("niebocross.register_now")}
          </a>
          <a
            href="/niebocross/zaloguj"
            class="inline-flex items-center justify-center rounded-full border-2 border-emerald-500 bg-white px-6 py-3 text-base font-semibold text-emerald-700 shadow-lg transition hover:-translate-y-0.5 hover:bg-emerald-50"
          >
            {t("niebocross.login.title")}
          </a>
          <a
            href="/niebocross/lista"
            class="inline-flex items-center justify-center rounded-full border-2 border-slate-300 bg-white px-6 py-3 text-base font-semibold text-slate-700 shadow-lg transition hover:-translate-y-0.5 hover:bg-slate-50"
          >
            {t("niebocross.participants_list_btn")}
          </a>
        </div>
        <a
          href="https://www.facebook.com/events/1586078795903551"
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center gap-2 rounded-full bg-blue-600 px-6 py-3 text-base font-semibold text-white shadow-lg shadow-blue-600/30 transition hover:-translate-y-0.5 hover:bg-blue-500"
        >
          <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
            <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
          </svg>
          {t("common.event")}
        </a>
      </div>
    </div>

    <div class="mt-10 flex justify-center lg:mt-0">
      <div class="relative w-full max-w-md">
        <div class="absolute -left-6 -top-6 h-24 w-24 rounded-full bg-emerald-400/30 blur-3xl"></div>
        <div class="absolute -right-6 -bottom-6 h-24 w-24 rounded-full bg-cyan-400/30 blur-3xl"></div>
        <div class="relative overflow-hidden rounded-3xl bg-[#fbfbfb] p-6 ring-1 ring-slate-200 shadow-2xl">
          <img
            src="/niebocross_logo.webp"
            alt="Logo NieboCross"
            class="mx-auto w-full max-w-sm"
            loading="lazy"
          />
        </div>
      </div>
    </div>
  </div>
</section>

<section class="mx-auto max-w-6xl px-6 py-16">
  <div class="grid gap-10">
    <div class="space-y-6">
      <h2 class="text-3xl font-bold text-slate-900 text-center">{t("niebocross.two_routes_one_goal")}</h2>
      <p class="text-lg text-slate-700  text-center">
        {t("niebocross.two_routes_desc")}
