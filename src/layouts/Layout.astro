---
import CookieBanner from "../components/CookieBanner.astro";

interface Props {
  title: string;
}

const { title } = Astro.props;

const ctaItems = [
  { name: "Dołącz", href: "/dolacz", cta: true },
  { name: "Zaloguj", href: "/zaloguj", cta: true },
];

const mainNavItems = [
  { name: "Aktualności", href: "/aktualnosci" },
  { name: "Wydarzenia", href: "/wydarzenia" },
  {
    name: "O nas",
    children: [
      { name: "Inicjatywy", href: "/inicjatywy" },
      { name: "Zatyrusy", href: "/zatyrusy" },
    ],
  },
  { name: "Półmaraton", href: "/wilczy-polmaraton" },
  { name: "Rajd NW", href: "/rajdnw" },
  { name: "Partner", href: "/partner" },
];

const allNavItems = [...ctaItems, ...mainNavItems];
---

<!doctype html>
<html lang="pl">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="Stowarzyszenie ZATYRANI to organizacja zajmująca się popularyzowaniem biegania i innych form aktywności ruchowej. Dołącz do nas!"
    />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <title>{title}</title>
    <!-- Google Analytics -->
    <script is:inline>
      window.dataLayer = window.dataLayer || [];
      window.dataLayer.push({ "gtm.start": new Date().getTime(), event: "gtm.js" });
    </script>
    <script async src="https://www.googletagmanager.com/gtag/js?id=GTM-K8J5JRX"></script>
  </head>
  <body class="min-h-screen bg-white">
    <noscript>
      <iframe
        src="https://www.googletagmanager.com/ns.html?id=GTM-K8J5JRX"
        height="0"
        width="0"
        style="display:none;visibility:hidden"></iframe>
    </noscript>

    <header class="border-b">
      <nav class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between h-16 items-center">
          <div class="flex-shrink-0">
            <a href="/" class="flex items-center">
              <img class="h-8 w-auto" src="/logo.png" alt="Zatyrani" />
            </a>
          </div>
          {/* Desktop Navigation Items */}
          <div class="hidden sm:flex flex-1 items-center justify-center" id="desktopNav">
            {/* CTA Buttons */}
            <div class="flex space-x-4 mr-8">
              {ctaItems.map((item) => (
                <a
                  href={item.href}
                  class="inline-flex items-center text-sm font-medium bg-purple-600 hover:bg-purple-700 text-white px-4 py-2 rounded-full"
                >
                  {item.name}
                </a>
              ))}
            </div>

            {/* Main Navigation Links */}
            <div class="flex space-x-8">
              {
                mainNavItems.map((item) =>
                  item.children ? (
                    <div class="relative">
                      <button class="desktop-dropdown-toggle inline-flex items-center text-sm font-medium hover:text-purple-600 text-gray-900 px-1 pt-1">
                        {item.name}
                        <svg
                          class="ml-1 h-5 w-5"
                          xmlns="http://www.w3.org/2000/svg"
                          viewBox="0 0 20 20"
                          fill="currentColor"
                        >
                          <path
                            fill-rule="evenodd"
                            d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z"
                            clip-rule="evenodd"
                          />
                        </svg>
                      </button>
                      <div class="desktop-dropdown-menu absolute z-10 -ml-4 mt-3 transform px-2 w-screen max-w-xs sm:px-0 hidden">
                        <div class="rounded-lg shadow-lg ring-1 ring-black ring-opacity-5 overflow-hidden">
                          <div class="relative grid gap-6 bg-white px-5 py-6 sm:gap-8 sm:p-8">
                            {item.children.map((child) => (
                              <a
                                href={child.href}
                                class="-m-3 p-3 flex items-start rounded-lg hover:bg-gray-50"
                              >
                                <div class="ml-4">
                                  <p class="text-base font-medium text-gray-900">
                                    {child.name}
                                  </p>
                                </div>
                              </a>
                            ))}
                          </div>
                        </div>
                      </div>
                    </div>
                  ) : (
                    <a
                      target={item.target === "_blank" ? "_blank" : undefined}
                      href={item.href}
                      class="inline-flex items-center text-sm font-medium text-gray-900 hover:text-purple-600 px-1 pt-1"
                    >
                      {item.name}
                    </a>
                  ),
                )
              }
            </div>
          </div>
        </div>

        <!-- Mobile Navigation Items (hidden by default) -->
        <div id="mobileNav" class="hidden sm:hidden flex-col space-y-4 bg-white shadow-md p-4">
          {
            allNavItems.map((item) =>
              item.children ? (
                <div>
                  <button class="w-full text-left block px-4 py-2 text-sm font-medium text-gray-900 mobile-dropdown-toggle">
                    {item.name}
                  </button>
                  <div class="pl-4 hidden mobile-dropdown-menu">
                    {item.children.map((child) => (
                      <a
                        href={child.href}
                        class="block px-4 py-2 text-sm font-medium text-gray-700 hover:text-purple-600"
                      >
                        {child.name}
                      </a>
                    ))}
                  </div>
                </div>
              ) : (
                <a
                  target={item.target === "_blank" ? "_blank" : undefined}
                  href={item.href}
                  class={`block px-4 py-2 text-sm font-medium hover:text-purple-600 ${
                    item.cta
                      ? "bg-purple-600 hover:bg-purple-700 text-white text-center rounded-full"
                      : "text-gray-900"
                  }`}
                >
                  {item.name}
                </a>
              ),
            )
          }
        </div>
      </nav>
    </header>

    <main>
      <slot />
    </main>

    <footer class="bg-white border-t mt-12 relative">
      <div class="max-w-7xl mx-auto py-12 px-4 sm:px-6 lg:px-8">
        <div class="flex justify-center mb-4">
          <a href="https://www.youtube.com/@Zatyranitv/videos" target="_blank" class="text-gray-500 hover:text-red-600 flex items-center space-x-2">
            <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path fill-rule="evenodd" d="M19.812 5.418c.861.23 1.538.907 1.768 1.768C21.998 8.78 22 12 22 12s0 3.22-.42 4.814a2.506 2.506 0 0 1-1.768 1.768c-1.59.42-7.81.42-7.81.42s-6.22 0-7.81-.42a2.506 2.506 0 0 1-1.768-1.768C2 15.22 2 12 2 12s0-3.22.42-4.814a2.506 2.506 0 0 1 1.768-1.768C5.78 5.002 12 5 12 5s6.22 0 7.812.418zM9.75 15.25V8.75l5.5 3.25-5.5 3.25z" clip-rule="evenodd" />
            </svg>
            <span class="text-sm font-medium">Youtube - Zatyrani</span>
          </a>
        </div>
        <div class="text-center">
          <p class="text-sm text-gray-500">
            © 2025 Zatyrani Gratisownia.pl Gmina Pilchowice. All rights reserved.
            <a
              href="Statut-Stowarzyszenia-ZATYRANI.docx"
              class="text-blue-600 hover:text-blue-700 block"
              download="statut"
            >
              Statut Stowarzyszenia.
            </a>
          </p>
        </div>
      </div>
    </footer>
    <CookieBanner />

    <script>
      // JavaScript to toggle the mobile menu
      const menuButton = document.getElementById("menuButton");
      const mobileNav = document.getElementById("mobileNav");

      menuButton.addEventListener("click", () => {
        // Toggle the visibility of mobileNav
        if (mobileNav) {
          mobileNav.classList.toggle("hidden");
        }
      });

      // JavaScript for mobile dropdowns
      document.querySelectorAll(".mobile-dropdown-toggle").forEach((button) => {
        button.addEventListener("click", () => {
          const menu = button.nextElementSibling;
          menu.classList.toggle("hidden");
        });
      });

      // JavaScript for desktop dropdowns
      document.querySelectorAll(".desktop-dropdown-toggle").forEach((button) => {
        button.addEventListener("click", (event) => {
          event.stopPropagation();
          const menu = button.nextElementSibling;
          menu.classList.toggle("hidden");
        });
      });

      // Close dropdowns when clicking outside
      document.addEventListener("click", (event) => {
        document.querySelectorAll(".desktop-dropdown-menu").forEach((menu) => {
          if (!menu.contains(event.target) && !menu.previousElementSibling.contains(event.target)) {
            menu.classList.add("hidden");
          }
        });
      });
    </script>

    <style>
      /* Mobile Navigation: Hidden by default */
      #mobileNav {
        display: none;
        position: absolute;
        top: 64px; /* Start just below the header */
        left: 0;
        right: 0;
        background-color: white;
        box-.shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        z-index: 10;
        transition: all 0.3s ease; /* Smooth transition */
      }

      /* Display mobile navigation when toggled */
      #mobileNav.hidden {
        display: none;
      }

      #mobileNav:not(.hidden) {
        display: block;
      }

      /* Mobile Navigation Links */
      #mobileNav a {
        padding: 1rem;
        text-align: center;
        width: 100%;
        display: block;
        text-decoration: none;
        color: #333;
      }

      #mobileNav a:hover {
        background-color: #f7f7f7;
      }
    </style>
  </body>
</html>
